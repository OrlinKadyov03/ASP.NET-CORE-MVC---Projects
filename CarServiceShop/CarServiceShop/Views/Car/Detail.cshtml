@model Car
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">@Model.Brand @Model.Model - @Model.RegisterPlate</h3>
            <div class="row">
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">Service description</h4>
                    <p>@Model.DescriptionProblem</p>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-5">General Info</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-product">
                            <tbody>
                                <tr>
                                    <td width="390">Brand</td>
                                    <td>@Model.Brand</td>
                                </tr>
                                <tr>
                                    <td>Model</td>
                                    <td>@Model.Model</td>
                                </tr>
                                <tr>
                                    <td>Engine volume</td>
                                    <td>@Model.EngineVolume</td>
                                </tr>
                                <tr>
                                    <td>Horsepower</td>
                                    <td>@Model.Horsepower</td>
                                </tr>
                                <tr>
                                    <td>Engine type</td>
                                    <td>@Model.EngineType</td>
                                </tr>
                                <tr>
                                    <td>Transmision type</td>
                                    <td>@Model.TransmisionType</td>
                                </tr>
                                <tr>
                                    <td>Production year</td>
                                    <td>@Model.YearOfProduction.ToString("yyyy/MM/dd")</td>
                                </tr>
                                <tr>
                                    <td>Drivetrain</td>
                                    <td>@Model.Drivetrain</td>
                                </tr>
                                <tr>
                                    <td>Category</td>
                                    <td>@Model.Category</td>
                                </tr>
                                <tr>
                                    <td>Color</td>
                                    <td>@Model.Color</td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>