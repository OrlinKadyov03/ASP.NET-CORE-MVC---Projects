@{
}
@model Person

<h2>Create Person</h2>

<div class="row">
    <div class="col-6">


        <div class="card">
            <div class="card-header">
                Create new Person
            </div>
            <div class="card-body">
                <form asp-controller="HotelManagement" asp-action="CreatePerson" method="post">
                <div class="mb-3">
                    <label class="form-label">Person Name</label>
                    <input asp-for="Name" type="text" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Person Age</label>
                    <input asp-for="Age" type="number" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Person Id</label>
                    <input asp-for="IdNum" type="number" class="form-control" />
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
                </form>
            </div>
            <div class="card-footer">
            </div>
        </div>
    </div>
</div>
